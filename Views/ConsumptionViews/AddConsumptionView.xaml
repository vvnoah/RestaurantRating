<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RestaurantRating.ViewModels.ConsumptionViewModels"
             x:DataType="viewmodels:AddConsumptionViewModel"
             x:Class="RestaurantRating.Views.ConsumptionViews.AddConsumptionView"
             Title="Add a Consumption">
    <Grid Margin="10"  RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TableView Intent="Form" Grid.Row="0">
            <TableRoot>
                <TableSection>
                    <TextCell Text="ID" Detail="{Binding RestaurantId}"/>
                    <EntryCell Text="{Binding Consumption.Description}" Placeholder="Description"/>
                </TableSection>
            </TableRoot>
        </TableView>

        <Grid VerticalOptions="End" Grid.Row="1" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Text="Cancel" Command="{Binding NavigateBackCommand}"/>
            <Button Grid.Column="1" Text="Save" Command="{Binding SaveConsumptionButtonCommand}"/>
        </Grid>
    </Grid>
</ContentPage>