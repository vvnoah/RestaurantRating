<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RestaurantRating.ViewModels.RestaurantViewModels"
             x:Class="RestaurantRating.Views.RestaurantViews.AddRestaurantView"
             Title="Add Restaurant View">

    <ContentPage.BindingContext>
        <vm:AddRestaurantViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label 
            Text="Create Restaurant View"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout>
            <Button Text="Back" Command="{Binding NavigateBackCommand}"/>
            <Button Text="Save"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>