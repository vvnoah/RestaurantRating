<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RestaurantRating.ViewModels.RestaurantViewModels"
             x:DataType="vm:DetailsRestaurantViewModel"
             x:Class="RestaurantRating.Views.RestaurantViews.DetailsRestaurantView"
             Title="Restaurant Details">
    <Grid Margin="10"  RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TableView Grid.Row="1">
            <TableRoot>
                <TableSection>
                    <TextCell Text="ID" Detail="{Binding Restaurant.Id}"/>
                    <TextCell Text="Name" Detail="{Binding Restaurant.RestaurantName}"/>
                </TableSection>
            </TableRoot>
        </TableView>

        <Grid VerticalOptions="End" Grid.Row="1" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Text="Back" Command="NavigateBack"/>
            <Button Grid.Column="1" Text="Edit"/>
        </Grid>
    </Grid>
</ContentPage>