<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RestaurantRating.ViewModels.RestaurantViewModels"
             x:Class="RestaurantRating.Views.RestaurantViews.ListRestaurantsView"
             Title="List Restaurants View"
             >
    
    <ContentPage.BindingContext>
        <vm:ListRestaurantsViewModel />
    </ContentPage.BindingContext>
    
    <VerticalStackLayout Margin="10" Spacing="10">
        <ScrollView>
            <VerticalStackLayout Spacing="10">
                
            </VerticalStackLayout>
        </ScrollView>
        <Button Text="Create New Restaurant" Command="{Binding NavigateCreateRestaurantCommand}"/>
    </VerticalStackLayout>
</ContentPage>